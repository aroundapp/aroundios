source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '8.1'
use_frameworks!

def shared_pods
	pod 'Alamofire'
	pod 'SwiftyJSON', :git => 'https://github.com/SwiftyJSON/SwiftyJSON.git'
	pod 'FBSDKCoreKit'
	pod 'FBSDKLoginKit'
	pod 'FBSDKShareKit'
	pod 'SwiftDate'
end

target "SnapyTag" do
	shared_pods
end
